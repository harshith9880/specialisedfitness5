<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- TextView for displaying the step count -->
    <TextView
        android:id="@+id/stepCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps: 0"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <!-- TextView for displaying the calorie count -->
    <TextView
        android:id="@+id/calorieCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: 0"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <!-- Button to start tracking steps -->
    <Button
        android:id="@+id/startTrackingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:layout_marginBottom="16dp" />

    <!-- Button to stop tracking steps -->
    <Button
        android:id="@+id/stopTrackingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Tracking" />

</LinearLayout>
